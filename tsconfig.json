{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-allow-imports-plugin",
        "imports": {
          "**/*": [
            "react",
            "react-dom",
            "react-dom/*",
            "./**"
          ],
          "**/app/**": [
            "~/concern/*",
            "~/concern/*/*",
            "~/infrastructure/*",
            "~/react",
            "~/typescript"
          ],
          "**/app/boot/**": [
            "~/pages"
          ],
          "**/app/pages/*/context.ts": [
            "~/infrastructure/router/route-hooks",
          ],
          "**/app/pages/*/**": [
            "../context"
          ],
          "**/app/pages/*/popups/*": [
            "../forms",
          ],
          "**/app/pages/*/forms/views/**": [
            "../handlers",
            "../../handlers",
            "../../../handlers",
          ],
          "**/concern/**": [
            "~/infrastructure/*",
            "~/react",
            "~/typescript"
          ],
          "**/concern/chunks/**": [
            "~/concern/common/*",
            "~/concern/general/*",
            "styled-components"
          ],
          "**/concern/common/**": [
            "~/concern/general/*"
          ],
          "**/concern/common/ui/**": [
            "styled-components"
          ],
          "**/concern/common/third-party/hooks/**": [
            "../actions",
            "../requests",
            "../base-url",
            "use-query-action",
            "@tanstack/react-query"
          ],
          "**/concern/common/third-party/actions/**": [
            "../requests",
            "../base-url"
          ],
          "**/concern/common/third-party/requests/**": [
            "../base-url",
            "../../base-url"
          ],
          "**/concern/common/themes/**": [
            "color",
            "styled-components"
          ],
          "**/infrastructure/**": [
            "~/react",
            "~/typescript"
          ],
          "**/infrastructure/http/**": [
            "@tanstack/react-query",
            "@tanstack/react-query-devtools"
          ],
          "**/infrastructure/http/assets/**": [
            "../helpers"
          ],
          "**/infrastructure/stores/form-store/**": [
            "../form-store"
          ],
          "**/infrastructure/ui/**": [
            "color",
            "styled-components",
            "styled-normalize",
            "use-react-input/*"
          ],
          "**/infrastructure/ui/components/*": [
            "../core",
            "../../core",
            "../hooks",
            "../helpers",
            "../../helpers",
          ],
          "**/infrastructure/ui/core/*/*": [
            "../../helpers",
            "../../hooks"
          ],
          "**/infrastructure/ui/core/typography/*/*": [
            "../../../helpers",
          ],
          "**/infrastructure/ui/core/typography/components/*": [
            "../helpers",
          ],
          "**/infrastructure/ui/core/input/**": [
            "@tiptap/react",
            "@tiptap/starter-kit"
          ],
          "**/infrastructure/ui/hooks/**": [
            "../helpers"
          ],
          "**/infrastructure/ui/theme/theme-provider/**": [
            "../theme"
          ]
        }
      }
    ],
    "paths": {
      "~/pages": [
        "./src/app/pages"
      ],
      "~/concern/*": [
        "./src/concern/*"
      ],
      "~/infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "~/react": [
        "./src/react"
      ],
      "~/typescript": [
        "./src/typescript"
      ]
    }
  },
  "include": ["./src/**/*", "vite-env.d.ts"],
}
